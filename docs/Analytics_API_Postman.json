          "name": "Get Trends - Last 6 Months (Default)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/trends",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "trends"]
            }
          }
        },
        {
          "name": "Get Trends - Last 3 Months",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/trends?months=3",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "trends"],
              "query": [
                {
                  "key": "months",
                  "value": "3"
                }
              ]
            }
          }
        },
        {
          "name": "Get Trends - Last 12 Months",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/trends?months=12",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "trends"],
              "query": [
                {
                  "key": "months",
                  "value": "12"
                }
