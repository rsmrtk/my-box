{
  "info": {
    "name": "Financial Dashboard Analytics API",
    "description": "Collection for testing all analytics endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Dashboard Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "dashboard"]
            },
            "description": "Get comprehensive dashboard metrics including income, expenses, cash flow, and top categories"
          }
        }
      ]
    },
    {
      "name": "Top Expenses",
      "item": [
        {
          "name": "Get Top 3 Categories (Default)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/top",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "top"]
            }
          }
        },
        {
          "name": "Get Top 5 Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/top?limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "top"],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Get Top 10 Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/top?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "top"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Expense Trends",
      "item": [
