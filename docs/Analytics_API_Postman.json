      ]
    },
    {
      "name": "Income Growth",
      "item": [
        {
          "name": "Get Income Growth Analysis",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/income/growth",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "income", "growth"]
            },
            "description": "Analyze income growth between current and previous month"
          }
        }
      ]
    },
    {
      "name": "Anomaly Detection",
      "item": [
        {
          "name": "Detect Anomalies - Default (1.5x)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/anomalies",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "anomalies"]
            }
          }
        },
        {
          "name": "Detect Anomalies - Sensitive (1.2x)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/anomalies?threshold=1.2",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "anomalies"],
              "query": [
                {
                  "key": "threshold",
                  "value": "1.2"
                }
              ]
            }
          }
        },
        {
          "name": "Detect Anomalies - Strict (2.0x)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/anomalies?threshold=2.0",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "anomalies"],
              "query": [
                {
                  "key": "threshold",
                  "value": "2.0"
                }
              ]
            }
          }
        },
        {
          "name": "Detect Anomalies - Very Strict (3.0x)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/expenses/anomalies?threshold=3.0",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "expenses", "anomalies"],
              "query": [
                {
                  "key": "threshold",
                  "value": "3.0"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:9595",
      "type": "string"
    }
  ]
}